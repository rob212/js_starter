{
  "name": "js_starter",
  "version": "1.0.0",
  "license": "MIT",
  "description": "A JavaScript starter project for Code Katas including Jest for use with ES6",
  "scripts": {
    "test": "jest",
    "lint": "eslint --ignore-path .gitignore .",
    "format": "prettier --ignore-path .gitignore --write \"**/*.+(js|json)\""
  },
  "jest": {
    "testMatch": [
      "**/*.spec.js",
      "**/*.test.js"
    ]
  },
  "babel": {
    "presets": [
      "@babel/preset-env"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.12.3",
    "@babel/preset-env": "^7.12.1",
    "babel-jest": "^26.6.1",
    "eslint": "^7.12.1",
    "eslint-config-prettier": "^6.15.0",
    "jest": "^26.6.1",
    "prettier": "^2.1.2"
  }
}
